        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <Button
            android:id="@+id/type_gongzuorenyuan"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="工作人员"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />

        <Button
            android:id="@+id/type_huawu"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="话  务"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />

        <Button
            android:id="@+id/type_chongchang"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="充  场"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <Button
            android:id="@+id/type_yanyi"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="演  艺"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />

