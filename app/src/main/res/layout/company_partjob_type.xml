<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/body_color"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_top" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="兼职类型"
        android:textColor="@color/ziti_orange"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <Button
            android:id="@+id/type_paifa"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="派  发"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />

        <Button
            android:id="@+id/type_cxiao"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="促  销"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />

        <Button
            android:id="@+id/type_jiajiao"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="家  教"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <Button
            android:id="@+id/type_fwy"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="服务员"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />

        <Button
            android:id="@+id/type_liyi"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="礼  仪"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />

        <Button
            android:id="@+id/type_bary"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.3"
            android:background="@drawable/type_selector"
            android:gravity="center"
            android:text="安保人员"
            android:textColor="@drawable/selector_setting_txt"
            android:textSize="@dimen/myjianli" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:gravity="center" >

        <Button
            android:id="@+id/type_mote"
            style="@style/paddingtype"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
