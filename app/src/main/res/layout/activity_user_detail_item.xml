<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.parttime.addresslist.UserDetailActivity"
                android:background="@color/c_F5F5F5">

    <ScrollView android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resume_bottom"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/name_age_sex_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/images_container"
                    android:layout_toStartOf="@+id/images_container"
                    >
                    <LinearLayout android:id="@+id/name_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_height="wrap_content"
                            style="@style/detail_item_key"
                            android:text="@string/name"
                            />
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            style="@style/detail_item_value"
                            android:text="用户名"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_item_dividing"/>
                    <LinearLayout android:id="@+id/sex_container"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">
                        <TextView
                            android:layout_height="wrap_content"
                            style="@style/detail_item_key"
                            android:text="@string/sex"
                            />
                        <TextView
                            android:id="@+id/sex"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            style="@style/detail_item_value"
                            android:text="性别"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_item_dividing"/>
                    <LinearLayout android:id="@+id/age_container"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal">
                        <TextView
                            android:layout_height="wrap_content"
                            style="@style/detail_item_key"
                            android:text="@string/sex"
                            />
                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="39dp"
                            style="@style/detail_item_value"
                            android:text="年龄"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_item_dividing"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/images_container"
                    android:layout_width="118dp"
                    android:layout_height="120dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="88dp"
                        android:layout_height="108dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/head"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/picture_num"
                        android:id="@+id/picture_num"
                        android:layout_gravity="center_horizontal|bottom"/>
                </FrameLayout>

            </RelativeLayout>
            <!--学历-->
            <TextView
                android:id="@+id/education_key"
                android:layout_width="wrap_content"
                style="@style/detail_item_key"
                android:layout_height="40dp"
                android:layout_below="@+id/name_age_sex_container"
                android:text="@string/education"/>
            <TextView
                android:id="@+id/education_value"
                android:layout_width="wrap_content"
                style="@style/detail_item_value"
                android:layout_height="40dp"
                android:layout_below="@+id/reputation_line"
                android:layout_toRightOf="@+id/education_key"
                android:layout_toEndOf="@+id/education_key"
                android:text="@string/education"/>
            <ImageView
                android:id="@+id/education_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/education_key"
                android:background="@drawable/line_item_dividing"/>
            <!--身高-->
            <TextView
                android:id="@+id/height_key"
                android:layout_width="wrap_content"
                style="@style/detail_item_key"
                android:layout_height="40dp"
                android:layout_below="@+id/education_line"
                android:text="@string/height"/>
            <TextView
                android:id="@+id/height_value"
                android:layout_width="wrap_content"
                style="@style/detail_item_value"
                android:layout_height="40dp"
                android:layout_below="@+id/education_line"
                android:layout_toRightOf="@+id/height_key"
                android:layout_toEndOf="@+id/height_key"
                android:text="@string/height"/>
            <ImageView
                android:id="@+id/height_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/height_key"
                android:background="@drawable/line_item_dividing"/>
            <!--其他-->
            <TextView
                android:id="@+id/other_key"
                android:layout_width="wrap_content"
                style="@style/detail_item_key"
                android:layout_height="40dp"
                android:layout_below="@+id/height_line"
                android:text="@string/other"/>
            <TextView
                android:id="@+id/other_value"
                android:layout_width="wrap_content"
                style="@style/detail_item_value"
                android:layout_height="40dp"
                android:layout_below="@+id/height_line"
                android:layout_toRightOf="@+id/other_key"
                android:layout_toEndOf="@+id/other_key"
                android:text="@string/other"/>
            <ImageView
                android:id="@+id/other_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/other_key"
                android:background="@drawable/line_item_dividing"/>
            <!--三维-->
            <TextView
                android:id="@+id/three_dimensional_key"
                android:layout_width="wrap_content"
                style="@style/detail_item_key"
                android:layout_height="40dp"
                android:layout_below="@+id/other_line"
                android:text="@string/three_dimensional"/>
            <TextView
                android:id="@+id/three_dimensional_value"
                android:layout_width="wrap_content"
                style="@style/detail_item_value"
                android:layout_height="40dp"
                android:layout_below="@+id/other_line"
                android:layout_toRightOf="@+id/three_dimensional_key"
                android:layout_toEndOf="@+id/three_dimensional_key"
                android:text="@string/three_dimensional"/>
            <ImageView
                android:id="@+id/three_dimensional_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/three_dimensional_key"
                android:background="@drawable/line_item_dividing"/>
            <!--信誉-->
            <TextView
                android:id="@+id/reputation_key"
                android:layout_width="wrap_content"
                style="@style/detail_item_key"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/three_dimensional_line"
                android:text="@string/reputation"/>
            <LinearLayout
                android:id="@+id/reputation_value_container"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/three_dimensional_line"
                android:layout_toRightOf="@+id/reputation_key"
                android:layout_toEndOf="@+id/reputation_key"
                android:orientation="horizontal"/>
            <ImageView
                android:id="@+id/reputation_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/reputation_key"
                android:background="@drawable/line_item_dividing"/>
            <!--认证-->
            <TextView
                android:id="@+id/certification_key"
                android:layout_width="wrap_content"
                style="@style/detail_item_key"
                android:layout_height="40dp"
                android:layout_below="@+id/reputation_line"
                android:text="@string/renzheng"/>
            <TextView
                android:id="@+id/certification_value"
                android:layout_width="wrap_content"
                style="@style/detail_item_value"
                android:layout_height="40dp"
                android:layout_below="@+id/reputation_line"
                android:layout_toRightOf="@+id/certification_key"
                android:layout_toEndOf="@+id/certification_key"
                android:text="@string/renzheng"/>
            <ImageView
                android:id="@+id/certification_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/certification_key"
                android:background="@drawable/line_item_dividing"/>

            <RelativeLayout android:id="@+id/appraise_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/certification_line">
                <TextView
                    android:id="@+id/appraise_key"
                    android:layout_width="wrap_content"
                    style="@style/detail_item_key"
                    android:textColor="@color/detail_info_value_text_color"
                    android:layout_height="40dp"
                    android:text="@string/appraise"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    style="@style/detail_item_value"
                    android:text="@string/expend"
                    android:id="@+id/expend"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_toLeftOf="@+id/expend_checked"
                    android:layout_toStartOf="@+id/expend_checked"
                    />
                <CheckBox
                    android:id="@+id/expend_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    style="@style/Checkbox_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"/>
            </RelativeLayout>
            <!--存放评论的值-->
            <LinearLayout
                android:id="@+id/appraise_value_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appraise_container"
                android:orientation="vertical">
                <include layout="@layout/activity_user_detail_resume" android:id="@+id/resume_content_container"/>
                <include layout="@layout/activity_user_detail_friend" android:id="@+id/friend_content_container"/>
                <include layout="@layout/activity_user_detail_evaluation" android:id="@+id/add_friend_content_container"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <include android:id="@+id/resume_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/activity_user_detail_resume_bottom"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
